<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_selected_destination"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joel.automotive.SelectedDestinationActivity"
    tools:ignore="InvalidId">

    <TextView
        android:text="@string/destination_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/textView6"
        android:fontFamily="sans-serif"
        android:height="20dp"
        android:textSize="18sp" />

    <Button
        android:text="@string/sqli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_sqli"
        android:layout_below="@id/textView6" />

    <TextView
        android:text="@string/cantine_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/btn_cantine"
        android:layout_alignBottom="@+id/btn_cantine"
        android:layout_alignStart="@+id/textView7" />


    <Button
        android:text="@string/paris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_bar"
        android:layout_below="@+id/btn_cantine"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:text="@string/cantine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cantine"
        android:layout_below="@+id/btn_sqli"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <Button
        android:text="@string/londres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tardis"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/btn_bar"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/billund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_lego"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/btn_tardis"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/sqli_n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_above="@+id/btn_cantine"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/dernier_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_bar"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="14dp"
        android:id="@+id/textView10" />

    <TextView
        android:text="@string/tardis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_tardis"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="14dp"
        android:id="@+id/textView12" />

    <TextView
        android:text="@string/legoland"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_alignBaseline="@+id/btn_lego"
        android:layout_alignBottom="@+id/btn_lego"
        android:layout_alignStart="@+id/textView12" />

</RelativeLayout>
